<!DOCTYPE html>
<html>
<head>
  <title>Send Money</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('./layout/navbar.ejs') %>

  <div class="container mt-5">
    <h1 class="mb-4 text-center">Send Money</h1>

    <form method="POST" action="/sendmoney" class="shadow p-4 rounded bg-light">
      <div class="mb-3">
        <label class="form-label">Sender:</label>
        <input type="text" name="sender" value="<%= currentUser.username %>" class="form-control" readonly />
      </div>

      <div class="mb-3">
        <label class="form-label">Receiver:</label>
        <select name="receiver_username" class="form-select" required>
          <% users.forEach(user => { %>
            <option value="<%= user.username %>"><%= user.username %></option>
          <% }); %>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label">Amount:</label>
        <input type="number" name="amount" step="0.01" class="form-control" required />
      </div>

      <div class="mb-3">
        <label class="form-label">Purpose:</label>
        <input type="text" name="purpose" maxlength="100" class="form-control" required />
      </div>

      <div class="mb-3">
        <label class="form-label">Date & Time:</label>
        <input type="text" value="<%= new Date().toLocaleString() %>" class="form-control" readonly />
      </div>

      <button type="submit" class="btn btn-primary w-100">Send</button>
    </form>
  </div>

  <%- include('./layout/footer.ejs') %>
</body>
</html>
