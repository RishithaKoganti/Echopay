<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Transaction History</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      background: #f4f4f4;
    }

    h1, h2 {
      text-align: center;
    }

    .transactions-wrapper {
      max-width: 900px;
      margin: 30px auto;
    }

    .transaction-bar {
      background-color: white;
      border-radius: 8px;
      margin-bottom: 15px;
      padding: 16px 24px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .left-info, .middle-info, .right-info {
      flex: 1;
    }

    .middle-info {
      text-align: center;
    }

    .right-info {
      text-align: right;
    }

    .transaction-id {
      font-size: 12px;
      color: #999;
    }

    .amount {
      font-size: 20px;
      font-weight: bold;
    }

    .status-sent {
      color: #e74c3c;
      font-weight: bold;
    }

    .status-received {
      color: #2ecc71;
      font-weight: bold;
    }

    .meta {
      font-size: 14px;
      margin-top: 5px;
    }

    .purpose {
      font-style: italic;
      color: #666;
    }

  </style>
</head>
<body>

<%- include('./layout/navbar.ejs') %>

<h1>Hi, <%= user.username %>!</h1>
<h2>Your Transaction History</h2>

<% if (transactions.length === 0) { %>
  <p style="text-align: center;">No transactions found.</p>
<% } else { %>
  <div class="transactions-wrapper">
    <% transactions.forEach(transaction => { 
         const isSent = transaction.sender_name === user.username;
    %>
      <div class="transaction-bar">
        <div class="left-info">
          <div class="transaction-id">Txn ID: <%= transaction.transaction_id %></div>
          <div class="meta">
            From: <%= transaction.sender_name %><br>
            To: <%= transaction.receiver_name %>
          </div>
        </div>
        <div class="middle-info">
          <div class="amount">â‚¹<%= Number(transaction.amount).toFixed(2) %></div>
          <div class="purpose"><%= transaction.purpose %></div>
        </div>
        <div class="right-info">
          <div class="<%= isSent ? 'status-sent' : 'status-received' %>">
            <%= isSent ? 'Sent' : 'Received' %>
          </div>
          <div class="meta"><%= new Date(transaction.created_at).toLocaleString() %></div>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>

</body>
</html>
